<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unical.ingsw.cohabita.ui.view.CodiceInvitoController"
            prefWidth="1000" prefHeight="600"
            styleClass="root-pane"
            stylesheets="@../css/CasaStyle.css">

    <!-- Lato sinistro con hero e logo -->
    <left>
        <StackPane prefWidth="480" styleClass="hero-section">
            <children>
                <Circle radius="190" styleClass="hero-circle-1"/>
                <Circle radius="120" styleClass="hero-circle-2"/>

                <VBox alignment="CENTER" spacing="25">
                    <children>
                        <ImageView fitWidth="210" preserveRatio="true"
                                   styleClass="logo-glow">
                            <image>
                                <Image url="@../assets/logoConScritta.png"/>
                            </image>
                        </ImageView>

                        <Label text="Unisciti alla tua casa"
                               styleClass="hero-title"/>
                        <Label text="Inserisci il codice che ti ha inviato il tuo coinquilino manager"
                               wrapText="true"
                               maxWidth="320"
                               styleClass="hero-subtitle"/>
                    </children>
                </VBox>
            </children>
        </StackPane>
    </left>

    <center>
        <VBox alignment="CENTER"
              spacing="24"
              maxWidth="420"
              styleClass="form-container">
            <children>

                <VBox alignment="CENTER" spacing="6">
                    <children>
                        <Label text="Codice invito"
                               styleClass="form-title"/>
                        <Label text="Collega il tuo profilo alla casa esistente"
                               styleClass="form-subtitle"/>
                    </children>
                </VBox>

                <VBox spacing="10">
                    <children>
                        <Label text="CODICE" styleClass="field-label"/>
                        <TextField fx:id="codiceInvitoField"
                                   promptText="Es: 7F2K9ABQ"
                                   styleClass="modern-field"/>
                    </children>
                </VBox>

                <Button fx:id="uniscitiButton"
                        text="ENTRA NELLA CASA"
                        maxWidth="Infinity"
                        styleClass="primary-btn"/>

                <HBox alignment="CENTER" spacing="6">
                    <children>
                        <Label text="Non hai ancora una casa?"
                               styleClass="secondary-text"/>
                        <Button fx:id="creaCasaButton"
                                text="Crea nuova abitazione"
                                styleClass="link-btn"/>
                    </children>
                </HBox>

            </children>

            <padding>
                <Insets top="40" bottom="40" left="50" right="50"/>
            </padding>
        </VBox>
    </center>

</BorderPane>
