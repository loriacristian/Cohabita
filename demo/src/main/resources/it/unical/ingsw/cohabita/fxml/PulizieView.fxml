<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unical.ingsw.cohabita.ui.view.PulizieController"
            prefWidth="1100" prefHeight="650"
            stylesheets="@../css/PulizieStyle.css">

    <left>
        <fx:include source="SidebarView.fxml" />
    </left>

    <center>
        <VBox spacing="20" styleClass="content-area">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="20">
                    <children>
                        <Label text="Turni pulizie" styleClass="page-title" HBox.hgrow="ALWAYS"/>
                        <Button fx:id="btnCreaCiclo"
                                text="+ Crea nuovo ciclo"
                                styleClass="primary-btn"
                                visible="false"
                                managed="false"/>

                        <Button fx:id="btnEliminaCiclo"
                                text="- Elimina ciclo"
                                styleClass="secondary-btn"
                                visible="false"
                                managed="false"/>
                    </children>
                </HBox>

                <VBox fx:id="noCicloBox"
                      spacing="12"
                      alignment="CENTER"
                      visible="false"
                      managed="false"
                      styleClass="dashboard-card-large">
                    <padding>
                        <Insets top="40" bottom="40" left="30" right="30"/>
                    </padding>
                    <children>
                        <Label text="Nessun ciclo di pulizie attivo"
                               styleClass="card-title"/>
                        <Label text="Crea un nuovo ciclo per iniziare ad assegnare i turni."
                               styleClass="card-subtitle"/>
                    </children>
                </VBox>

                <StackPane styleClass="dashboard-card-large" VBox.vgrow="ALWAYS"
                           fx:id="turniBox"
                           visible="true"
                           managed="true">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="20" bottom="20" left="20" right="20"/>
                        </padding>
                        <children>

                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Mostra:" styleClass="field-label"/>
                                    <ComboBox fx:id="filtroCombo" prefWidth="180"/>
                                </children>
                            </HBox>

                            <TableView fx:id="turniTable" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
                                    <TableColumn fx:id="colAssegnato" text="Assegnato a" prefWidth="200"/>
                                    <TableColumn fx:id="colStato" text="Stato" prefWidth="140"/>
                                    <TableColumn fx:id="colValutazione" text="Valutazione" prefWidth="140"/>
                                    <TableColumn fx:id="colAzioni" text="Azioni" prefWidth="180"/>
                                </columns>
                            </TableView>

                        </children>
                    </VBox>
                </StackPane>

            </children>
        </VBox>
    </center>

</BorderPane>
