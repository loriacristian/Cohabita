<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unical.ingsw.cohabita.ui.view.PulizieController"
            prefWidth="1100" prefHeight="650"
            stylesheets="@../css/PulizieStyle.css">

    <left>
        <VBox prefWidth="260"
              styleClass="sidebar"
              spacing="10"
              alignment="TOP_CENTER">
            <padding>
                <Insets top="30" bottom="30" left="20" right="20"/>
            </padding>
            <children>
                <ImageView fitWidth="100" preserveRatio="true">
                    <image>
                        <Image url="@../assets/logoSenzaScritta.png"/>
                    </image>
                </ImageView>

                <Label fx:id="nomeCasaLabel" text="Casa" styleClass="sidebar-title"/>
                <Label fx:id="ruoloLabel" text="Ruolo" styleClass="sidebar-subtitle"/>

                <VBox spacing="8" VBox.vgrow="NEVER">
                    <VBox.margin>
                        <Insets top="20"/>
                    </VBox.margin>
                    <children>
                        <Button fx:id="btnDashboard" text="Dashboard" maxWidth="Infinity" styleClass="sidebar-btn"/>
                        <Button fx:id="btnCoinquilini" text="Coinquilini" maxWidth="Infinity" styleClass="sidebar-btn"/>
                        <Button fx:id="btnPulizie" text="Turni pulizie" maxWidth="Infinity" styleClass="sidebar-btn, sidebar-btn-active"/>
                        <Button fx:id="btnImpostazioni" text="Impostazioni" maxWidth="Infinity" styleClass="sidebar-btn"/>
                    </children>
                </VBox>

                <VBox VBox.vgrow="ALWAYS"/>

                <Button fx:id="btnLogout" text="Logout" maxWidth="Infinity" styleClass="sidebar-btn-logout"/>
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" styleClass="content-area">
            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT" spacing="15">
                    <children>
                        <Label text="Turni pulizie" styleClass="page-title" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>

                        <Button fx:id="btnCreaCiclo"
                                text="+ Crea nuovo ciclo"
                                styleClass="primary-btn"
                                visible="false"
                                managed="false"/>

                        <Button fx:id="btnEliminaCiclo"
                                text="Elimina ciclo"
                                styleClass="danger-link-btn"
                                visible="false"
                                managed="false"/>
                    </children>
                </HBox>

                <VBox fx:id="noCicloBox"
                      spacing="12"
                      alignment="CENTER"
                      visible="false"
                      managed="false"
                      styleClass="dashboard-card-large">
                    <padding>
                        <Insets top="40" bottom="40" left="30" right="30"/>
                    </padding>
                    <children>
                        <Label text="Nessun ciclo di pulizie attivo"
                               styleClass="card-title"/>
                        <Label text="Crea un nuovo ciclo per iniziare ad assegnare i turni."
                               styleClass="card-subtitle"/>
                    </children>
                </VBox>

                <StackPane styleClass="dashboard-card-large" VBox.vgrow="ALWAYS"
                           fx:id="turniBox"
                           visible="true"
                           managed="true">
                    <VBox spacing="12">
                        <padding>
                            <Insets top="20" bottom="20" left="20" right="20"/>
                        </padding>
                        <children>

                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <children>
                                    <Label text="Mostra:" styleClass="field-label"/>
                                    <ComboBox fx:id="filtroCombo" prefWidth="180"/>
                                </children>
                            </HBox>

                            <TableView fx:id="turniTable" VBox.vgrow="ALWAYS" styleClass="no-scroll-table">
                                <columns>
                                    <TableColumn fx:id="colData" text="Data"/>
                                    <TableColumn fx:id="colAssegnato" text="Assegnato a"/>
                                    <TableColumn fx:id="colStato" text="Stato"/>
                                    <TableColumn fx:id="colValutazione" text="Valutazione"/>
                                    <TableColumn fx:id="colAzioni" text="Azioni"/>
                                </columns>

                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>

                                <placeholder>
                                    <Label text=""/>
                                </placeholder>
                            </TableView>

                        </children>
                    </VBox>
                </StackPane>

            </children>
        </VBox>
    </center>

</BorderPane>