<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unical.ingsw.cohabita.ui.view.ImpostazioniController"
            prefWidth="1100" prefHeight="650"
            styleClass="dashboard-root"
            stylesheets="@../css/ImpostazioniStyle.css">

    <left>
        <VBox styleClass="sidebar"
              prefWidth="260"
              spacing="8"
              alignment="TOP_CENTER">

            <padding>
                <Insets top="30" bottom="30" left="20" right="20"/>
            </padding>

            <children>

                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <ImageView fitWidth="100" preserveRatio="true">
                            <image>
                                <Image url="@../assets/logoSenzaScritta.png"/>
                            </image>
                        </ImageView>
                        <Label fx:id="nomeCasaLabel"
                               text="Casa"
                               styleClass="sidebar-title"/>
                        <Label fx:id="ruoloLabel"
                               text="Ruolo"
                               styleClass="sidebar-subtitle"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20"/>
                    </VBox.margin>
                </VBox>

                <Button fx:id="btnDashboard"
                        text="Dashboard"
                        maxWidth="Infinity"
                        styleClass="sidebar-btn"/>

                <Button fx:id="btnCoinquilini"
                        text="Coinquilini"
                        maxWidth="Infinity"
                        styleClass="sidebar-btn"/>

                <Button fx:id="btnPulizie"
                        text="Turni Pulizie"
                        maxWidth="Infinity"
                        styleClass="sidebar-btn"/>

                <Button fx:id="btnImpostazioni"
                        text="Impostazioni"
                        maxWidth="Infinity"
                        styleClass="sidebar-btn, sidebar-btn-active"/>

                <VBox VBox.vgrow="ALWAYS"/>

                <Button fx:id="btnLogout"
                        text="Logout"
                        maxWidth="Infinity"
                        styleClass="sidebar-btn-logout"/>

            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" styleClass="content-area">

            <padding>
                <Insets top="30" bottom="30" left="30" right="30"/>
            </padding>

            <children>

                <Label text="Impostazioni"
                       styleClass="page-title"/>

                <StackPane styleClass="dashboard-card">
                    <VBox spacing="14" alignment="TOP_LEFT">
                        <children>
                            <Label text="Modifica password"
                                   styleClass="card-title"/>

                            <VBox spacing="8">
                                <children>
                                    <Label text="PASSWORD ATTUALE"
                                           styleClass="field-label"/>
                                    <PasswordField fx:id="vecchiaPasswordField"
                                                   promptText="Inserisci password attuale"
                                                   styleClass="modern-field"
                                                   maxWidth="360"/>
                                </children>
                            </VBox>

                            <VBox spacing="8">
                                <children>
                                    <Label text="NUOVA PASSWORD"
                                           styleClass="field-label"/>
                                    <PasswordField fx:id="nuovaPasswordField"
                                                   promptText="Inserisci nuova password"
                                                   styleClass="modern-field"
                                                   maxWidth="360"/>
                                </children>
                            </VBox>

                            <VBox spacing="8">
                                <children>
                                    <Label text="CONFERMA NUOVA PASSWORD"
                                           styleClass="field-label"/>
                                    <PasswordField fx:id="confermaPasswordField"
                                                   promptText="Conferma nuova password"
                                                   styleClass="modern-field"
                                                   maxWidth="360"/>
                                </children>
                            </VBox>

                            <Button fx:id="btnCambiaPassword"
                                    text="CAMBIA PASSWORD"
                                    styleClass="primary-btn"
                                    maxWidth="200"/>

                        </children>
                        <padding>
                            <Insets top="20" bottom="20" left="20" right="20"/>
                        </padding>
                    </VBox>
                </StackPane>

                <!-- CARD: Lascia Casa -->
                <StackPane styleClass="dashboard-card">
                    <VBox spacing="12" alignment="TOP_LEFT">
                        <children>
                            <Label text="Lascia la casa"
                                   styleClass="card-title"/>
                            <Label text="Abbandonando la casa, perderai l'accesso a tutti i dati condivisi. Questa azione Ã¨ irreversibile."
                                   wrapText="true"
                                   maxWidth="520"
                                   styleClass="card-subtitle"/>

                            <Button fx:id="btnLasciaCasa"
                                    text="LASCIA CASA"
                                    styleClass="danger-btn"
                                    maxWidth="200"/>

                        </children>
                        <padding>
                            <Insets top="20" bottom="20" left="20" right="20"/>
                        </padding>
                    </VBox>
                </StackPane>

            </children>
        </VBox>
    </center>

</BorderPane>
